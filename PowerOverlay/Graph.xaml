<UserControl x:Class="PowerOverlay.Graph"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:PowerOverlay"
             mc:Ignorable="d"
             d:DesignHeight="150" d:DesignWidth="300"
             xmlns:d3="clr-namespace:InteractiveDataDisplay.WPF;assembly=InteractiveDataDisplay.WPF">
    <Grid>        
        <Border HorizontalAlignment="Right" VerticalAlignment="Bottom" Height="150" Width="300" BorderThickness="2 1 2 1" BorderBrush="LightBlue">

            <d3:Chart Background="Gray" >

                <d3:LineGraph x:Name="linegraph" Description="{Binding Path=Name}" Stroke="Yellow" StrokeThickness="0.8"/>
            </d3:Chart>

        </Border>
        
    </Grid>

</UserControl>
    
